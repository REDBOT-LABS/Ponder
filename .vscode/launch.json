{
    /*
     * a basic setup config to run the backend of the server.
     * Kept in repo for simplicity.
     */
    "version": "0.2.0",
    "configurations": [
        {
            //requires Node extension pack
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\backend\\index.js"
        }
    ]
}